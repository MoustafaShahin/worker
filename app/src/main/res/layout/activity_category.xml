<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.example.android.worker.category">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:layout_weight="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select"
        />
</LinearLayout>
    <LinearLayout
        android:padding="16dp"
   android:layout_weight="2"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
<ImageButton
    android:layout_weight="1"
    android:background="@drawable/wrench"
    android:id="@+id/mechanic"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    />
        <ImageButton
            android:layout_weight="1"
            android:background="@drawable/carpen"
            android:id="@+id/carpenter"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageButton
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/plum"
            android:id="@+id/plumber"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <ImageButton
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/elec"
            android:id="@+id/elect"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

</LinearLayout>

</LinearLayout>